<h1>ユーザー一覧</h1>

<div class="container">
	<div class="row">
		<% @users.each do |user| %>
		<table class="table">
			<tr>
			<td>名前: <%= link_to user.name, user_path(user.id) %>
			<%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg' %></td>
		</tr>
			<% if current_user != user %>
			<% if user.followed_by?(current_user) %>
			<p><%= link_to "フォロー済み", user_relationships_path(user.id), method: :delete %></p>
			<% else %>
			<p><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
			<% end %>
			<% end %>
		</table>
		<% end %>
	</div>
</div>