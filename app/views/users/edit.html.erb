<h1>編集ページ</h1>

<%= form_for(@user) do |f| %>
<div>
	<p>
		<span>名前: <%= f.text_field :name, autofocus: true, placeholder: "名前" %></span>
	</p>
</div>

<div>
	<p>
		<span>プロフィール画像:
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
			<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
		</span>
	</p>
</div>
<%= f.submit "変更を保存" %>
<% end %>
